<resources>
    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="YellowPanel">
        <item name="android:background">#DDFFEC00</item>
    </style>
    
    <style name="SemiTransWhitePanel">
        <item name="android:background">#DDFFFFFF</item>
    </style>
    
    <style name="SemiTransBluePanel">
        <item name="android:background">#DDE0EEEE</item>
    </style>
    
    <style name="MinimalEditText" parent="android:style/Widget.EditText">
    	<item name="android:background">@drawable/minimal_edittext</item>
	</style>
	
    <style name="BlueBackgroundImageButton" parent="@android:style/Widget.ImageButton">
        <item name="android:background">@drawable/blue_background_imagebutton</item>
    </style>
    
    <style name="MinimalTextButton" parent="@android:style/Widget.TextView">
        <item name="android:textSize">20sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:gravity">center</item>
		<item name="android:padding">10dip</item>
		<item name="android:textColor">@drawable/minimal_textbutton_selector</item>
    </style>
    
    <style name="FlatBlueButton" parent="@android:style/Widget.Button">
		<item name="android:textSize">18sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">#ffffff</item>
		<item name="android:gravity">center</item>
		<item name="android:background">@drawable/blue_button_selector</item>
		<item name="android:padding">10dip</item>
	</style>

</resources>
